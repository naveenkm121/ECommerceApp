<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin10"
    android:layout_marginLeft="@dimen/margin10"
    android:layout_marginTop="@dimen/margin10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius5"
    app:cardElevation="@dimen/elevation2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naveen Kumar"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/defaultCheckIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_circle_outline_24"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/address1TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A 13, Jeeva Seva CHS"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/address2TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kishanpur Ramghat Road"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Landmark: Dominos Pizza"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/cityPincodeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aligarh -202001"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Landmark: Dominos Pizza"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_16"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/mobileTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mobile_str"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"
            android:layout_margin="@dimen/margin5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height30"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/editLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.9"
                android:gravity="center">

                <!-- Icon for the first part -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding2"
                    android:src="@drawable/outline_edit_24"
                    app:tint="@color/grey_dark" />

                <!-- Text for the first part -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textColor="@color/grey_dark"/>
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray"
                android:layout_weight="0.01"/>
            <!-- LinearLayout with icon and text for the second part -->
            <LinearLayout
                android:id="@+id/deleteLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <!-- Icon for the second part -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding2"
                    android:src="@drawable/baseline_delete_outline_24"
                    app:tint="@color/grey_dark" />

                <!-- Text for the second part -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:textColor="@color/grey_dark"/>
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray"
                android:layout_weight="0.01"/>
            <!-- LinearLayout with icon and text for the third part -->
            <LinearLayout
                android:id="@+id/defaultLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <!-- Icon for the third part -->
                <ImageView
                    android:id="@+id/defaultIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding2"
                    android:src="@drawable/baseline_bookmark_border_24"
                    app:tint="@color/grey_dark" />

                <!-- Text for the third part -->
                <TextView
                    android:id="@+id/defaultTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_str"
                    android:textColor="@color/grey_dark"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>
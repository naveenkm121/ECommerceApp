<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width100"
    android:layout_height="@dimen/width100"
    android:layout_margin="@dimen/margin5">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width100"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/nameTV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:text="@string/fragment_category"
                android:textSize="@dimen/text_12" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="@dimen/width70"
        android:layout_height="@dimen/height100"
        android:src="@drawable/ic_product_item"
        android:translationZ="2dp"
        android:scaleType="fitXY"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="@+id/cardView"
        card_view:layout_constraintStart_toStartOf="@+id/cardView"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height30"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="@string/fragment_category"
        android:textSize="@dimen/text_12"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="@+id/cardView"
        card_view:layout_constraintStart_toStartOf="@+id/cardView"/>

</androidx.constraintlayout.widget.ConstraintLayout>